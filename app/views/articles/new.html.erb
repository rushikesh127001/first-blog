<h1>create articles</h1>

<% if @article.errors.any? %>
    <h2>the following errors occured </h2>
    <ul>
        <%= @article.errors.full_messages do |msg| %>
        <li>
            <%= msg %>
        </li>    
        <% end %>
    </ul>

<% end %>    



<%= form_for @article do |a| %>

    <p>
        <%= a.label :title %>
        <%= a.text_field :title %>
    </p>
    <p>
        <%= a.label :description %>
        <%= a.text_area :description %>
    </p>
    <p>
        <%= a.submit %>
    </p>

<% end %>    