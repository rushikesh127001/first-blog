<h2 align="center">Listing All Users </h2>
<div align="center">
    <div align="center"><%= will_paginate %></div>

    <% @users.each do |user| %>
        <ul class="listing">
            <div class="row">
                <div class="well col-md-4 col-md-offset-4">
                    <li><%= link_to avatar_for(user), user_path(user)%></li>
                    <li class="article-title"><%= link_to user.username, user_path(user)%></li>
                    <li><small><%= pluralize(user.articles.count,"article") if user.articles %></small></li>
                    <li> <%= link_to 'Delete User', user_path(user),method: :delete, data:{confirm: "Are You Sure?"}%> </li>
                </div>
            </div>
        </ul>            
    <%end%>
    
</div>    